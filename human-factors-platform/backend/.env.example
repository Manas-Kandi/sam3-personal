# SAM 3D Body Configuration
SAM3D_CHECKPOINT_PATH=../sam-3d-body/checkpoints/sam-3d-body-dinov3/model.ckpt
SAM3D_MHR_PATH=../sam-3d-body/checkpoints/sam-3d-body-dinov3/assets/mhr_model.pt

# LLM Configuration (choose one)
LLM_PROVIDER=nvidia  # Options: "anthropic", "openai", or "nvidia"

# API Keys (set one based on LLM_PROVIDER)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
NVIDIA_API_KEY=your_nvidia_api_key_here

# NVIDIA NIM Configuration (optional, only if using nvidia provider)
NVIDIA_MODEL=meta/llama-3.1-70b-instruct  # Default model, can also use: meta/llama-3.1-405b-instruct, etc.

# Server Configuration
PORT=8000
